{
  "branches": ["release/*", "main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/github",
      {
        "successComment": false,
        "failComment": false
      }
    ],
    [
      "@codedependant/semantic-release-docker",
      {
        "dockerRegistry": "ghcr.io",
        "dockerProject": "smartive-education",
        "dockerImage": "app-pizza-hawaii",
        "dockerLogin": false,
        "dockerContext": "./",
        "dockerFile": "./Dockerfile",
        "dockerTags": ["{{major}}.{{minor}}.{{patch}}", "{{major}}.{{minor}}", "{{major}}-latest", "{{git_sha}}", "latest"],
        "dockerArgs": {
          "BUILD_VERSION": "{{major}}.{{minor}}.{{patch}}",
          "COMMIT_SHA": "{{git_sha}}",
          "NPM_TOKEN": true
        },
        "dockerAutoClean": false
      }
    ],
    [
      "@codedependant/semantic-release-docker",
      {
        "dockerRegistry": "europe-west6-docker.pkg.dev/project-pizza-388116/pizza-repo",
        "dockerProject": "project-pizza-388116/pizza-repo",
        "dockerImage": "app-pizza-hawaii",
        "dockerLogin": false,
        "dockerContext": "./",
        "dockerFile": "./Dockerfile",
        "dockerTags": ["{{major}}.{{minor}}.{{patch}}", "{{major}}.{{minor}}", "{{major}}-latest", "{{git_sha}}", "latest"],
        "dockerArgs": {
          "BUILD_VERSION": "{{major}}.{{minor}}.{{patch}}",
          "COMMIT_SHA": "{{git_sha}}",
          "NPM_TOKEN": true
        },
        "dockerAutoClean": false
      }
    ]
  ]
}
